<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    >
 <LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">
  <TextView android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="3"
   android:textColor="@color/white"
   android:text="Turn On Hotspot"/>
  <CheckBox android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:text="On/Off"
   android:textColor="@color/white"
   android:id="@+id/config_1"/>
 </LinearLayout>
 
  <LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">
  <TextView android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="3"
   android:textColor="@color/white"
   android:text="Turn On Hidden Hotspot"/>
  <CheckBox android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:text="On/Off"
   android:textColor="@color/white"
   android:id="@+id/config_2"/>
 </LinearLayout>

   <LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">
  <TextView android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="3"
   android:textColor="@color/white"
   android:text="Testing to connect with Hotspot"/>
  <CheckBox android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:textColor="@color/white"
   android:text="On/Off"
   android:id="@+id/config_3"/>
 </LinearLayout>
 
    <LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">
  <TextView android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="3"
   android:textColor="@color/white"
   android:text="Testing to connect with Hidden Hotspot"/>
  <CheckBox android:layout_width="0dp"
   android:layout_height="wrap_content"
   android:layout_weight="1"
   android:textColor="@color/white"
   android:text="On/Off"
   android:id="@+id/config_4"/>
 </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>